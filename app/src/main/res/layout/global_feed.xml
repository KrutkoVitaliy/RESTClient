<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/globalMenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/logoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make Me Beauty"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:textSize="16pt"
        android:textColor="@color/colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/manicure"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:src="@mipmap/thumb_manicure"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/makeup"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:src="@mipmap/thumb_makeup"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/hairstyle"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:src="@mipmap/thumb_hairstyles"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>