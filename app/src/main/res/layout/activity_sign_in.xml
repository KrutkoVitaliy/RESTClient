<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/logoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="64dp"
        android:text="@string/app_name"
        android:textColor="#FFFFFF"
        android:textSize="14pt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:layout_marginTop="?attr/actionBarSize">

        <EditText
            android:id="@+id/signInEmailField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/authorization_hint_email"
            android:inputType="textEmailAddress"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:layout_marginTop="?attr/actionBarSize" />

        <EditText
            android:id="@+id/signInPassField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/authorization_hint_password"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />

        <Button
            android:id="@+id/signInSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/authorization_sign_ip"
            android:layout_marginTop="?attr/actionBarSize"/>

        <TextView
            android:id="@+id/signUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/authorization_to_sign_in"
            android:textColor="#FFFFFF"
            android:textSize="8pt"
            android:textStyle="bold" />
    </LinearLayout>
</FrameLayout>