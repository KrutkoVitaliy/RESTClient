            <ScrollView
                android:id="@+id/lookFields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Введите запрос"
                        android:textSize="8pt"
                        android:textStyle="bold"
                        android:textColor="@color/description_title"/>
                    <EditText
                        android:id="@+id/requestField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Отметьте используемые цвета"
                        android:textSize="8pt"
                        android:textStyle="bold"
                        android:textColor="@color/description_title"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/pinkCircle"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="#bb125b"
                            android:layout_margin="4dp"
                            android:src="@mipmap/photo_layer"/>
                        <ImageView
                            android:id="@+id/purpleCircle"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="#9210ae"
                            android:layout_margin="4dp"
                            android:src="@mipmap/photo_layer"/>
                        <ImageView
                            android:id="@+id/blueCircle"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="#117dae"
                            android:layout_margin="4dp"
                            android:src="@mipmap/photo_layer"/>
                        <ImageView
                            android:id="@+id/tealCircle"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="#3b9670"
                            android:layout_margin="4dp"
                            android:src="@mipmap/photo_layer"/>
                        <ImageView
                            android:id="@+id/greenCircle"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="#79bd14"
                            android:layout_margin="4dp"
                            android:src="@mipmap/photo_layer"/>
                        <ImageView
                            android:id="@+id/yellowCircle"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="#d4b515"
                            android:layout_margin="4dp"
                            android:src="@mipmap/photo_layer"/>
                        <ImageView
                            android:id="@+id/orangeCircle"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="#d46915"
                            android:layout_margin="4dp"
                            android:src="@mipmap/photo_layer"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/redCircle"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="#d42415"
                            android:layout_margin="4dp"
                            android:src="@mipmap/photo_layer"/>
                        <ImageView
                            android:id="@+id/neutralCircle"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="#d2af7f"
                            android:layout_margin="4dp"
                            android:src="@mipmap/photo_layer"/>
                        <ImageView
                            android:id="@+id/copperCircle"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="#b48f58"
                            android:layout_margin="4dp"
                            android:src="@mipmap/photo_layer"/>
                        <ImageView
                            android:id="@+id/brownCircle"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="#604e36"
                            android:layout_margin="4dp"
                            android:src="@mipmap/photo_layer"/>
                        <ImageView
                            android:id="@+id/hazelCircle"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="#70653f"
                            android:layout_margin="4dp"
                            android:src="@mipmap/photo_layer"/>
                        <ImageView
                            android:id="@+id/grayCircle"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="#555555"
                            android:layout_margin="4dp"
                            android:src="@mipmap/photo_layer"/>
                        <ImageView
                            android:id="@+id/blackCircle"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="#000000"
                            android:layout_margin="4dp"
                            android:src="@mipmap/photo_layer"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Выберите цвет глаз"
                        android:textSize="8pt"
                        android:textStyle="bold"
                        android:textColor="@color/description_title"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/blueEyesCircle"
                            android:layout_width="48dp"
                            android:layout_height="28dp"
                            android:background="@mipmap/eye_blue"/>
                        <ImageView
                            android:id="@+id/greenEyeCircle"
                            android:layout_width="48dp"
                            android:layout_height="28dp"
                            android:background="@mipmap/eye_green"/>
                        <ImageView
                            android:id="@+id/hazelEyeCircle"
                            android:layout_width="48dp"
                            android:layout_height="28dp"
                            android:background="@mipmap/eye_hazel"/>
                        <ImageView
                            android:id="@+id/brownEyeCircle"
                            android:layout_width="48dp"
                            android:layout_height="28dp"
                            android:background="@mipmap/eye_brown"/>
                        <ImageView
                            android:id="@+id/grayEyeCircle"
                            android:layout_width="48dp"
                            android:layout_height="28dp"
                            android:background="@mipmap/eye_gray"/>
                        <ImageView
                            android:id="@+id/blackEyeCircle"
                            android:layout_width="48dp"
                            android:layout_height="28dp"
                            android:background="@mipmap/eye_black"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Сложность макияжа"
                        android:textSize="8pt"
                        android:textStyle="bold"
                        android:textColor="@color/description_title"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                            <ImageView
                                android:id="@+id/easyDifficult"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@mipmap/easy"
                                android:background="#FFFFFF"/>
                            <ImageView
                                android:id="@+id/mediumDifficult"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@mipmap/medium"
                                android:background="#FFFFFF"
                                android:layout_marginLeft="32dp"/>
                            <ImageView
                                android:id="@+id/hardDifficult"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@mipmap/hard"
                                android:background="#FFFFFF"
                                android:layout_marginLeft="32dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Мероприятие"
                        android:textSize="8pt"
                        android:textStyle="bold"
                        android:textColor="@color/description_title"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"/>
                    <Spinner
                        android:id="@+id/occasionField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/occasions"
                        android:spinnerMode="dialog">
                    </Spinner>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"/>
                    <Button
                        android:id="@+id/lookSearch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Искать"/>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/searchNavigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/menu_navigation">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingLeft="16dp"
            android:paddingTop="48dp">

            <ImageView
                android:id="@+id/searchNavAvatar"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@mipmap/nav_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingTop="16dp">

                <TextView
                    android:id="@+id/searchNavName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Make Me Beauty"
                    android:textColor="#FFFFFF"
                    android:textSize="7pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/searchNavLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click to sign in"
                    android:textColor="#FFFFFF"
                    android:textSize="6pt" />
            </LinearLayout>
        </LinearLayout>

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>